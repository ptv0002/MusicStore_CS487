@model Models.OrderDetail

@{
    ViewData["Title"] = "Item Details";
    ViewBag.OActive = "active";
}

<hr />
<dl class="row">
    <dt class="col-sm-2 font-weight-bold">
        Order Info ID
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderInfoID)
    </dd>
    <dt class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Instrument)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InstrumentID)
    </dd>
    <dt class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.QuantitySold)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.QuantitySold)
    </dd>
    <dt class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.UnitPrice)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.UnitPrice)
    </dd>
</dl>
<div class="mb-2">
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary mr-2">Edit</a>
    <a data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">Delete</a>
</div>
<a asp-action="Edit" asp-controller="Order" asp-route-id="@Model.OrderInfoID">Back to Edit Order</a>
<div class="modal fade show" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true" style="display: none">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Are you sure?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to
                <label class="text-danger">permanently delete </label>
                this item? This process cannot be undone.
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Yes, delete it</a>
            </div>
        </div>
    </div>
</div>
