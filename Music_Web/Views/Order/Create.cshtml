@model Models.OrderInfo

@{
    ViewData["Title"] = "Add Order";
    ViewBag.OActive = "active";
}
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Employee" class="control-label"></label>
        <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
    </div>
    <div class="form-group">
        <label asp-for="Customer" class="control-label"></label>
        <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
    </div>
    <div class="form-group">
        <label asp-for="DateOfOrder" class="control-label"></label>
        <input asp-for="DateOfOrder" class="form-control" required/>
        <span asp-validation-for="DateOfOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
